<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:padding="@dimen/_5ssp"
                    android:text="Field"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5ssp"
                    android:text="Identified Value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Brand Name"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/brand_name"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/brand_variant"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/brand_variant"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Net Qty."
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/net_qty"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Lic No."
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/lic_no"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Bar Code"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/barcode"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/mrp"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/mrp"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/alcohol"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/alcohol"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/edp_range"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/edp_range"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/mid"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/mid"
                    android:layout_margin="1dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:inputType="textCapWords"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/button"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/save"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/button"
                android:text="@string/save" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>


